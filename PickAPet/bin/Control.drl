package com.petpicker

import java.util.ArrayList;
  import java.io.BufferedReader;
  import java.io.IOException;
  import java.io.InputStreamReader;

rule "allergyGeneral"
	salience 1
    when
		Person(allergy=="undefined")
    then
        MainWindow.setQuestion(false, "Czy jesteś alergikiem?", "allergy", new ArrayList<String>() {{
    add("tak");
    add("nie");
}});   
end

rule "allergySpecificI"
	salience 2
	when
		Person(allergy=="tak" && allergyType=="undefined" && family=="undefined")
	then
		MainWindow.setQuestion(false, "Jaki typ alergii posiadasz?", "allergyType" ,new ArrayList<String>() {{
    add("na psy");
    add("na koty");
    add("na większość zwierząt z sierścią");
}});
end

rule "allergySpecificII"
	salience 3
	when
		Person(familyAllergyType=="undefined" && familyAllergy=="tak")
	then
		MainWindow.setQuestion(false, "Jaki typ alergii posiada członek twojej rodziny?", "familyAllergyType" ,new ArrayList<String>() {{
    add("na psy");
    add("na koty");
    add("na większość zwierząt z sierścią");
}});
end

